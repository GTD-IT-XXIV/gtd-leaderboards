{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",

    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
