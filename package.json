{
  "name": "gtd-leaderboards",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "postinstall": "prisma generate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "\n========== Development ==========": "",
    "dev": "nodemon --watch src",
    "\n========== Database ==========": "",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:clear": "prisma migrate reset",
    "db:start": "docker compose -p gtd-leaderboards -f docker/docker-compose.yaml up -d db",
    "db:stop": "docker compose -p gtd-leaderboards -f docker/docker-compose.yaml down db",
    "\n========== Building ==========": "",
    "build": "tsc",
    "start": "node dist/app.js",
    "compose:build": "docker compose -p gtd-leaderboards -f docker/docker-compose.yaml build",
    "compose:start": "docker compose -p gtd-leaderboards -f docker/docker-compose.yaml up -d",
    "compose:stop": "docker compose -p gtd-leaderboards -f docker/docker-compose.yaml down",
    "build:docker": "docker build -t gtd/leaderboards -f docker/Dockerfile .",
    "start:docker": "docker run --name gtd-leaderboards -p 3000:3000 --mount type=bind,source=\"/$(pwd)\"/.env,target=/app/.env --rm gtd/leaderboards",
    "push:docker": "docker buildx build --platform linux/amd64,linux/arm64 --provenance=mode=max --sbom=true -f docker/Dockerfile --push -t devpintugtd/gtd-leaderboards:latest .",
    "\n========== Linting & Formatting ==========": "",
    "lint": "eslint .",
    "format": "prettier ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.13.0",
    "@t3-oss/env-core": "^0.10.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^9.9.0",
    "google-spreadsheet": "^4.1.1",
    "morgan": "^1.10.0",
    "telegraf": "^4.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "eslint": "^9.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.1.0"
}
